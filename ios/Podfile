platform :ios, '15.1'

# Bring in RNâ€™s Pod helper (defines both use_react_native! and use_native_modules!)
require_relative '../node_modules/react-native/scripts/react_native_pods'

target 'SudokuApp' do
  # Autolink all native modules
  config = use_native_modules!

  # Point to your JS code
  use_react_native!(
    :path => config[:reactNativePath]
  )

  post_install do |installer|
    # Standard RN post-install step
    react_native_post_install(installer, mac_catalyst_enabled: false)

    # Fix EXAdsAdMob header paths so it finds ExpoModulesCore
    installer.pods_project.targets.each do |target|
      if target.name == 'EXAdsAdMob'
        target.build_configurations.each do |cfg|
          cfg.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
          cfg.build_settings['HEADER_SEARCH_PATHS'] << "\"${PODS_ROOT}/Headers/Public/ExpoModulesCore\""
          cfg.build_settings['HEADER_SEARCH_PATHS'] << "\"${PODS_ROOT}/Headers/Public/ExpoModulesCore/ExpoModulesCore\""
        end
      end
    end
  end
end
